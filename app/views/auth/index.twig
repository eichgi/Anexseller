{% extends "partials/layout.twig" %}
{% block content %}
<div id="login">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <h1 class="page-header">
                Autenticación
            </h1>
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Bienvenido a Anexseller</h3>
                </div>
                <div class="panel-body">
                    <form role="form" method="post" action="{{ 'auth/signin'|url }}">
                        <div class="alert-container"></div>
                        <div class="form-group">
                            <input class="form-control" placeholder="E-mail" name="correo" type="email" autofocus="" />
                            <span data-key="email" class="form-validation-failed"></span>
                        </div>
                        <div class="form-group">
                            <input class="form-control" placeholder="Contraseña" name="password" type="password" value="" />
                            <span data-key="password" class="form-validation-failed"></span>
                        </div>
                        <button data-ajax="true" type="submit" class="btn btn-lg btn-success btn-block">Ingresar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}